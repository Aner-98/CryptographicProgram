@{
    ViewData["Title"] = "Cryptographic Page";
}


<div class="image-container default-image">
    <img src=@CryptographicProgram.Controllers.HomeController.MyPath alt="Download image!">
</div>

<hr class="hr-line">

<div class="input-image">
    <form asp-action="AddFile" asp-controller="Home" method="post" enctype="multipart/form-data">
        <input class="file_upload" type="file" name="uploadedFile" />
        <input class="btn" type="submit" value="Save image" />
    </form>
    <a href=@CryptographicProgram.Controllers.HomeController.MyPath download="image"><button class="btn">Download image</button></a>
</div>

<hr class="hr-line">

<div class="main-functional">
    <div class="encrypt-text">
        <textarea class="input-text"></textarea>
        <button class="btn">Encrypt text</button>
    </div>
    <div class="decrypt-text">
        <textarea class="output-text"></textarea>
        <button class="btn">Decrypt text</button>
    </div>
</div>

<environment include="Development">
    <link rel="stylesheet" href="~/css/cryptographicPageStyle.css" />
</environment>
